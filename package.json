{
  "name": "editron",
  "version": "0.0.1-alpha.1",
  "description": "A text editor",
  "main": "main.js",
  "scripts": {
    "pack:mac": "time npx electron-packager . Editron --platfrom=darwin --arch=x64 --icon=app/assets/icons/mac.icns --out=release-builds --overwrite",
    "pack:linux": "time npx electron-packager . Editron --overwrite --asar=true --platform=linux --arch=x64 --icon=app/assets/icons/mac.png --prune=true --out=release-builds",
    "pack:win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=app/assets/icons/win.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Editron\"",
    "start": "npx electron .",
    "build": "npm run pack:mac && npm run pack:linux && npm run pack:win"
  },
  "repository": "https://github.com/codemaster138/editron",
  "keywords": [
    "Electron",
    "code",
    "text",
    "editor"
  ],
  "author": "Jake Sarjeant",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-packager": "^15.0.0"
  }
}
