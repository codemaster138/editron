{
  "name": "editron",
  "version": "0.0.1-alpha.1",
  "description": "A text editor",
  "main": "main.js",
  "scripts": {
    "pack": "npx electron-builder --dir",
    "start": "npx electron .",
    "dist": "npx electron-builder"
  },
  "repository": "https://github.com/codemaster138/editron",
  "keywords": [
    "Electron",
    "code",
    "text",
    "editor"
  ],
  "author": "Jake Sarjeant <pygamer138@github.com> (https://codemaster138.github.io)",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0"
  },
  "dependencies": {},
  "build": {
    "publish": null,
    "artifactName": "${os}-latest.${ext}",
    "directories": {
      "output": "dist"
    },
    "appId": "com.cm138.edit.editron",
    "mac": {
      "icon": "build/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
